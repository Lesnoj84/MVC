@page "/"
@rendermode InteractiveServer
@inject GameDb GameDb
@inject EditGame EditGame

<PageTitle>Game Catalog</PageTitle>

<h1>Game Catalog</h1>

<div class="mt-2">
    <a class="btn btn-primary mb-2" role="button" href="/editgame">Add</a>
</div>
@if (GameDb == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
        <th>Id</th>
        <th>Name</th>
        <th>Genre</th>
        <th class="text-end">Price</th>
        <th>Release Date</th>
        <th></th>
        </thead>
        <tbody>

            @if(games!=null)
            @foreach (var game in games)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.GenreId </td>
                    <td class="text-end">@game.Price.ToString("C2")</td>
                    <td>@game.ReleasedDate.ToShortDateString()</td>
                    <td width="130">
                        <div class="d-flex">
                            <a class="btn btn-primary m-1" role="button" href="@GameUrl(game.Id)">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <button name="deleteBtn" class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(game)">
                                <i class="bi bi-trash3"></i>
                            </button>
                           
                        </div>
                        <DeleteGame Game="@game"></DeleteGame>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}

@code
{
    private Game[]? games;

    
    string text = string.Empty;

    protected override void OnInitialized()
    {
      games =  EditGame.gameDb.GetGames();
    }
    private static string GameUrl(int id) => $"/editgame/{id}";

    private string GetDeleteModalId(Game game)
    {
        return $"#{DeleteGame.GetModalId(game)}";
    }

}