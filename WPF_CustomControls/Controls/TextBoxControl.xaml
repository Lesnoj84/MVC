<UserControl x:Class="WPF_CustomControls.Controls.TextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CustomControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid Background="White">
        <TextBox x:Name="txtBox" Background="Transparent"  VerticalContentAlignment="Center"
                 TextChanged="txtBox_TextChanged"/>
        <TextBlock x:Name="txtBlockPlaceholder" Text="{Binding Placeholder}" VerticalAlignment="Center" Panel.ZIndex="-1" Foreground="LightGray" Margin="1 0 0 0" />
        <Button x:Name="clearBtn" Content="X" Background="Transparent" Foreground="Gray" BorderThickness="0" HorizontalAlignment="Right" Width="40"
                Click="clearBtn_Click"/>
    </Grid>
</UserControl>
