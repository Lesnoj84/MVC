@page
@model IndexModel

<div class="container">
    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="Category/create" ><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                  
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var obj in Model.CategoryList.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a class="btn btn-primary mx-2" asp-page="Category/edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-fill"></i> Edit</a>
                            <a class=" btn btn-danger mx-2" asp-page="Category/delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


