<Window x:Class="MVVM_DataBinding.View.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_DataBinding.View"
        xmlns:autogenerate="clr-namespace:MVVM_DataBinding.ViewModel"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Window.Resources>
        <autogenerate:AutoGeneratePeople x:Key="ag"/>
        
    </Window.Resources>
    <Grid Margin="10" DataContext="{StaticResource ag}" >
        <StackPanel>
            <Button x:Name="btn" Content="Click" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btn_Click"/>
            <DataGrid x:Name="myviewList" ItemsSource="{Binding result}" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding ="{Binding Name}"/>
                    <DataGridTextColumn Header="ID" Binding ="{Binding ID}"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}"/>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
