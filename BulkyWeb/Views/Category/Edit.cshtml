@model Category

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text text-white py-2">@ViewData["Title"]: @Model.Name</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div>
                <input asp-for="Id" hidden />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row pt-1">
                <label asp-for=Name class="pt-0" style="font-weight:600"></label> @*asp-for displays name of category parameters.*@
                <input asp-for="Name" class="text-dark form-control border-dark bg-light bg-opacity-10" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row pt-1">
                <label asp-for=DisplayOrder class="pt-0" style="font-weight:600"></label>
                <input asp-for="DisplayOrder" class=" text-dark form-control border-dark bg-light bg-opacity-10" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            </div>
            <div class="row justify-content-center">
                <div class=" row col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class=" col-6 col-md-3">
                    <button asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</button>
                </div>
            </div>
        </form>
    </div>
</div>
