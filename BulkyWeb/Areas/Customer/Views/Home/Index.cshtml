@model List<Product>

@{
    ViewData["Title"] = "Main Page";
}
<partial name="_Notifications" />
<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@item.ImageURL" class="card-img-top rounded" />
                        <div class=" card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark text-opacity-75 text-uppercase text-center">@item.Title</p>
                                <p class="text-warning text-opacity-75 text-center">@item.Author</p>
                            </div>
                            <div>
                                <p class="card-title m-0 text-decoration-line-through text-dark text-opacity-75 text-center">List price: @item.ListPrice.ToString("c")</p>
                                <p class="card-title m-0 text-dark text-opacity-75 text-center">As low as: @item.Price100.ToString("c")</p>
                            </div>
                            <div>
                                <a class="btn btn-primary bg-gradient border-0 form-control mt-1" asp-action="Details" asp-route-id="@item.Id" >Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

