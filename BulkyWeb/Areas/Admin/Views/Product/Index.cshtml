@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 mt-4 ">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        <div class="col-12 text-end mt-2">
            <a class="btn btn-primary mb-2" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle me-2"></i> Create New Category</a>
        </div>

        <table class="table table-bordered table-striped border">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Cathegory</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(m => m.Title))
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.ISBN</td>
                        <td>@item.ListPrice</td>
                        <td>@item.CategoryId</td>
                        <td class="align-middle">
                            <div class=" d-flex justify-content-center align-items-center w-100" role="group">
                                <a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill me-2"></i>Edit</a>
                                <a class="btn btn-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 me-2"></i>Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
